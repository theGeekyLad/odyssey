<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/image_icon_place"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Title"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_icon_place"
        app:layout_constraintStart_toEndOf="@+id/image_icon_place"
        app:layout_constraintTop_toTopOf="@+id/image_icon_place" />
</androidx.constraintlayout.widget.ConstraintLayout>